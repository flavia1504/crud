<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('partials/head', {title: 'Inicio'}) %>
  <body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->

    <!-- Banner -->
    <div class="banner"></div>
    <!-- /Banner -->

    <!-- ultima visita -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Basado en tu Ãºltima visita</h2>
        </div>
        <% products.forEach(product => {%>
        <!-- Show the "visited" products -->
        <% if (product.category == 'visited') {%>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/detail/<%= product.id%>">
              <figure class="product-box_image">
                <img
                  src="/images/products/<%= product.image%>"
                  alt="imagen de producto <%= product.name%>"
                />
              </figure>
              <article class="product-box_data">
                <h2>$<%= product.discount > 0 ? toThousand(product.price-(product.price*(product.discount/100))) : toThousand(product.price)%></h2>
                <span
                  ><%= product.discount > 0 ? product.discount + "% OFF" : null
                  %>
                </span>
                <p><%= product.name%></p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>
        <% }%> <%})%>

        <div class="col-12">
          <a href="#ofertas"
            ><h2 class="products-title" id="ofertas">Ofertas</h2></a
          >
        </div>
        <% products.forEach(product => {%> <% if (product.category == 'in-sale')
        {%>
        <!-- Show the "in-sale" products -->
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/products/detail/<%- product.id%>">
              <figure class="product-box_image">
                <img
                  src="/images/products/<%= product.image%>"
                  alt="imagen de producto <%= product.name%>"
                />
              </figure>
              <article class="product-box_data">
                <h2>$<%= product.discount > 0 ? toThousand(product.price-(product.price*(product.discount/100))) : toThousand(product.price)%></h2>
                <span
                  ><%= product.discount > 0 ? product.discount + "% OFF" : null
                  %>
                </span>
                <p><%= product.name%></p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>
        <% }%> <%})%>
      </div>
    </div>

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>